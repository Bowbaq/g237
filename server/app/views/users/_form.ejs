<%- errorMessagesFor(user) %>
<div class="control-group">
   <%- form.label("username", false, {class: "control-label"}) %>
   <div class="controls">
       <%- form.input("username", {'value': user.username}) %>
   </div>
</div>
<div class="control-group">
   <%- form.label("password", false, {'class': "control-label"}) %>
   <div class="controls">
       <%- form.input("password", {'type': "password"}) %>
   </div>
</div>
